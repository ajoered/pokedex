<h1>Pok√©dex</h1>

<!-- List of pokemon -->
<ul class="pokedex-list">
  <% @pokemon.each do |pkmn| %>
    <li>
      <button class="js-show-pokemon btn btn-link"
          data-pokemon-uri="<%= pkmn["resource_uri"] %>">
        <%= pkmn["name"] %>
      </button>
    </li>
  <% end %>
</ul>


<!-- Pokemon modal view (hidden at first) -->
<div class="modal fade js-pokemon-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>

        <h3 class="modal-title">
          <img class="modal-content image" id="img">
          <span class="js-pokemon-name"></span>
          <small class="js-pokemon-number"></small>
        </h3>
      </div><!-- .modal-header -->

      <div class="modal-body">
        <dl class="dl-horizontal">
          <dt>Height</dt>
          <dd class="js-pokemon-height"></dd>

          <dt>Weight</dt>
          <dd class="js-pokemon-weight"></dd>
        </dl>
        <dl class="dl-horizontal">
          <dt>HP</dt>
          <dd class="js-pokemon-hp"></dd>

          <dt>Attack</dt>
          <dd class="js-pokemon-att"></dd>

          <dt>Defense</dt>
          <dd class="js-pokemon-def"></dd>

          <dt>Special Attack</dt>
          <dd class="js-pokemon-sp-att"></dd>

          <dt>Special Defense</dt>
          <dd class="js-pokemon-sp-def"></dd>

          <dt>Speed</dt>
          <dd class="js-pokemon-speed"></dd>
        </dl>
        <dl class="dl-horizontal js-type">
          <dt class="js-pokemon-type">Type</dt>
        </dl>
        <dl class="dl-horizontal js-description">
          <dt class="js-pokemon-description">Description</dt>
        </dl>
        
      </div><!-- .modal-body -->
    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div><!-- .modal -->
